@page
@model KhanehNoh.Endpoints.RazorPages.Areas.Admin.Pages.HomeServices.EditModel
@{
}
<div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">ویرایش هوم سرویس
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="post">
                  <input type="hidden" asp-for="HomeService.Id"/>
                <div class="card-body">
                  <div class="form-group">
                    <label>عنوان</label>
                    <input asp-for="HomeService.Title" class="form-control" type="text"  placeholder="عنوان را وارد کنید">
                  </div>

                  <div class="form-group">
                    <label>قیمت پایه</label>
                    <input asp-for="HomeService.BasePrice" class="form-control" type="text"  placeholder="قیمت پایه را وارد کنید">
                  </div>

                  <div class="form-group input-group mb-3">
                      <label>زیر دسته بندی</label>
                    <select asp-for="HomeService.SubCategoryId" class="form-select "  multiple="multiple" data-placeholder="یک زیر دسته بندی انتخاب کنید"
                          style="width: 100%;text-align: right">
                    @foreach (var sub in @Model.SubCategories)
                                    {
                                        <option value="@sub.Id">@sub.Title</option>
                                    }
                  </select>
                  </div >
             
                                             
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-success">ثبت</button>
                  <a asp-page="Index" class="btn btn-danger">بازگشت</a>
                </div>
              </form>
            </div>
            <!-- /.card -->