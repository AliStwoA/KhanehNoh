@page
@model KhanehNoh.Endpoints.RazorPages.Areas.Admin.Pages.SubCategory_CreateModel
@{
}
<!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">افزودن زیردسته بندی</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label>عنوان</label>
                    <input asp-for="subCategory.Title" class="form-control" type="text"  placeholder="عنوان را وارد کنید">
                  </div>
             
                  <div class="form-group input-group mb-3">
                      <label>دسته بندی</label>
                    <select asp-for="subCategory.CategoryId" class="form-select "  multiple="multiple" data-placeholder="یک دسته بندی انتخاب کنید"
                          style="width: 100%;text-align: right">
                    @foreach (var category in @Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Title</option>
                                    }
                  </select>
                  </div >

           
                 
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">ارسال</button>
                </div>
              </form>
            </div>
            <!-- /.card -->