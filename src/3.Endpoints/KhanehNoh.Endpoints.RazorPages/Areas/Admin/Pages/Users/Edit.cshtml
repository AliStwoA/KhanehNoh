@page
@model KhanehNoh.Endpoints.RazorPages.Areas.Admin.Pages.Users.EditModel
@{
}
<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
      <b>ویرایش کاربر</b>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">ویرایش کاربر</p>

      <form method="post">
          <input type="hidden" asp-for="User.Id"/>
        <div class="input-group mb-3">
          <input asp-for="User.FirstName" class="form-control" type="text" placeholder="نام">
          <div class="input-group-append">
            <span class="fa fa-user input-group-text"></span>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="User.LastName" class="form-control" type="text" placeholder="نام خانوادگی">
          <div class="input-group-append">
            <span class="fa fa-envelope input-group-text"></span>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="User.PhoneNumber" class="form-control" type="text" placeholder="شماره موبایل" required />
          <div class="input-group-append">
            <span class="fa fa-lock input-group-text"></span>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="User.Email" class="form-control" type="email" placeholder="آدرس ایمیل" required />
          <div class="input-group-append">
            <span class="fa fa-lock input-group-text"></span>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="User.Address" class="form-control" type="text" placeholder="آدرس" />
          <div class="input-group-append">
            <span class="fa fa-lock input-group-text"></span>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="User.UserName" class="form-control" type="text" placeholder="نام کاربری" />
          <div class="input-group-append">
            <span class="fa fa-lock input-group-text"></span>
          </div>
        </div>

        <div class="input-group mb-3">
          <input asp-for="User.Password" class="form-control" type="password" placeholder="کلمه عبور" />
          <div class="input-group-append">
            <span class="fa fa-lock input-group-text"></span>
          </div>
        </div>

        <div class="input-group mb-3">
          <select asp-for="User.CityId" class="form-select">
                                    @foreach (var city in @Model.Cities)
                                    {
                                        <option value="@city.Id">@city.Title</option>
                                    }
                          </select>
          <div class="input-group-append">
            <span class="fa fa-lock input-group-text"></span>
          </div>
        </div>

        

      
          <!-- /.col -->
          <button type="submit" class="btn btn-primary">ویرایش</button>
            
     </form> 
                        
          
          <!-- /.col -->
        </div>
      
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->
</body>